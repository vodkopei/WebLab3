@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
	<title>EntryView</title>
</head>
<body>
	<div class="text-center m-2">
		@{
			string txt;
			if (DateTime.Now.Hour > 12)
			{ txt = "Good afternoon, dear visitor!"; }
			else
			{
				txt = "Good morning, dear visitor!";
			}
		}

		<h2>@txt</h2>
		<br />
		<h3>Thank you for visiting our site.</h3>
		<h3>Help us get better.</h3>
		<h4>Please rate our work by folowing the link below.</h4>
		<a class="btn btn-primary" asp-action="Input">Review</a>
	</div>
</body>
</html>


